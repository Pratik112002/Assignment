<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_arrow"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/supportButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_card"
                android:src="@drawable/support"
                app:tint="@android:color/white" />
        </LinearLayout>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="andaz Kumar"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/memberSince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="member since Dec, 2020"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

    
        <LinearLayout
            android:id="@+id/creditScoreCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="credit score • REFRESH AVAILABLE"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="757"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

  
        <LinearLayout
            android:id="@+id/cashbackCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="lifetime cashback"
                android:textColor="#AAAAAA"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹3"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

 
        <LinearLayout
            android:id="@+id/bankBalanceCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="bank balance"
                android:textColor="#AAAAAA"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/rewardsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR REWARDS AND BENEFITS"
            android:textColor="#888888"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

      

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cashback Balance\n$0"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="coins\n26,46,583"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Win upto Rs 1000\nrefer and earn"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>




</LinearLayout>
